---
import { cn } from '@common';
import { CardVariant, Variants } from './Card';

export interface Props {
  class?: string;
  variant?: CardVariant;
}

const { class: className, variant = CardVariant.primary } = Astro.props;

const classes = cn('rounded-3xl p-6 overflow-hidden h-auto w-full', Variants[variant], className);
---

<div class={classes}>
  <slot />
</div>
